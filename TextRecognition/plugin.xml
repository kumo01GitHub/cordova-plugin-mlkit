<?xml version='1.0' encoding='utf-8'?>
<plugin
    id="cordova-plugin-mlkit-textrecognition"
    version="0.0.1"
    xmlns="http://apache.org/cordova/ns/plugins/1.0"
    xmlns:android="http://schemas.android.com/apk/res/android">
    
    <name>TextRecognition</name>
    <description>Cordova MLKit TextRecognition Plugin</description>
    <license>Apache 2.0</license>

    <js-module name="TextRecognition" src="www/TextRecognition.js">
        <clobbers target="cordova.plugins.mlkit.TextRecognition" />
    </js-module>

    <platform name="android">
        <config-file parent="/*" target="res/xml/config.xml">
            <feature name="TextRecognition">
                <param name="android-package" value="org.apache.cordova.mlkit.textrecognition.TextRecognition" />
            </feature>
        </config-file>

        <config-file parent="/*" target="AndroidManifest.xml">
        </config-file>

        <source-file src="src/android/TextRecognition.java" target-dir="src/org/apache/cordova/mlkit/textrecognition/" />
    </platform>

    <platform name="ios">
        <config-file parent="/*" target="config.xml">
            <feature name="TextRecognition">
                <param name="ios-package" value="TextRecognition" />
            </feature>
        </config-file>

        <header-file src="src/ios/TextRecognition.h"/>
        <source-file src="src/ios/TextRecognition.m" />
    </platform>
</plugin>
